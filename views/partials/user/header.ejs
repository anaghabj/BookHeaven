							<% if (locals.user) { %>
								<div class="dropdown">
									<a href="#" class="sign-up-link"><%= locals.user.name %></a>
									<div class="dropdown-content">
										<a href="/userProfile">Profile</a>
										<a href="/logout">Logout</a>
									</div>
								</div>
							<% } else { %>
								<a href="/signup" class="user-account for-buy"><span>Sign Up</span></a>
								<a href="/login" class="sign-in-link"><span>Log in</span></a>
							<% } %>
					
							<!-- Wishlist Icon -->
							<div class="wishlist-container mx-3">
								<a href="/wishlist" class="wishlist-link">
