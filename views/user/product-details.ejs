<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* General Reset and Styling */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    /* Main Page Styles */
    .main {
        padding: 20px 0;
    }

    /* Breadcrumb */
    .breadcrumb {
        font-size: 14px;
        margin-bottom: 15px;
    }

    /* Product Detail Section */
    .product-detail img {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
    }

    /* Slider Section */
    .product-image-slider {
        display: flex;
        overflow: hidden;
        position: relative;
    }

    .product-image-slider img {
        transition: transform 0.3s ease;
    }

    .product-image-slider .border-radius-10 {
        width: 100%;
        height: 400px;
    }

    /* Thumbnail Slider */
    .slider-nav-thumbnails {
        display: flex;
        justify-content: space-between;
        gap: 5px;
        padding: 10px;
    }

    .slider-nav-thumbnails img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        cursor: pointer;
        border-radius: 5px;
        transition: transform 0.2s ease;
    }

    .slider-nav-thumbnails img:hover {
        transform: scale(1.1);
    }

    /* Zoom Effect */
    .zoom-container {
        position: relative;
    }

    .zoom-preview {
        position: absolute;
        top: 0;
        left: 100%;
        width: 400px;
        height: 400px;
        background-repeat: no-repeat;
        background-size: contain;
        border: 1px solid #ddd;
        z-index: 1000;
        display: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .zoom-container:hover .zoom-preview {
        display: block;
    }

    /* Related Products Section */
    .related-products {
        margin-top: 50px;
    }

    .related-products h3 {
        margin-bottom: 20px;
    }

    .related-products .product-card {
        text-align: center;
    }

    .related-products .product-card img {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .related-products .product-card .product-name {
        margin-top: 10px;
        font-weight: bold;
    }

    .related-products .product-card .product-price {
        color: #007bff;
        font-size: 16px;
    }

    /* Product Price Styling */
.product-price-cover {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.product-price {
    font-size: 1.25rem; /* Size for sale price */
    font-weight: bold;
    color: #2d2d2d;
}

.text-brand {
    color: #e74c3c; /* Sale price color (red) */
    font-size: 1.5rem;
    font-weight: 700;
}

.old-price {
    text-decoration: line-through;
    color: #7f8c8d; /* Gray color for old price */
    font-size: 1.1rem;
}

.save-price {
    font-size: 1rem;
    color: #27ae60; /* Green color for discount */
    font-weight: 500;
    margin-left: 10px;
}

.font-md {
    font-size: 1.2rem;
}

.ml-2 {
    margin-left: 10px;
}

.primary-color {
    color: #2d2d2d;
}

/* Additional styling for the "No Offers" text */
.save-price.no-offer {
    color: #95a5a6; /* Gray color for "No Offers" */
}

/* Mobile and Small Screen Adjustments */
@media (max-width: 768px) {
    .product-price-cover {
        flex-direction: column;
        align-items: flex-start;
    }

    .product-price {
        font-size: 1.1rem;
    }

    .save-price {
        font-size: 1rem;
        margin-top: 5px;
    }
}



/* Container styles */
.detail-qty {
    display: inline-flex;
    align-items: center;
    border: 1px solid #ccc;
    border-radius: 5px;
    overflow: hidden;
    width: 120px;
    height: 40px;
    background-color: #f9f9f9;
}

/* Link styles */
.detail-qty a {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 30%;
    text-decoration: none;
    color: #333;
    background-color: #eaeaea;
    cursor: pointer;
    font-size: 18px;
    font-weight: bold;
    transition: background-color 0.3s ease;
}

/* Hover effect for links */
.detail-qty a:hover {
    background-color: #dcdcdc;
}

/* Quantity value styles */
.qty-val {
    flex: 1;
    text-align: center;
    font-size: 18px;
    font-weight: bold;
    color: #333;
}

/* Specific icon styles */
.fi-rs-angle-small-down::before {
    content: "-";
    font-size: 20px;
    color: #333;
}

.fi-rs-angle-small-up::before {
    content: "+";
    font-size: 20px;
    color: #333;
}




.product-extra-link2 {
