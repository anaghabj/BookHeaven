<script>
    let currentZoomImage = "";

    // Function to handle main image changes with thumbnails
    function changeImage(imageUrl) {
        $('.main-image').attr('src', imageUrl);
        $('.zoom-preview').css("background-image", `url(${imageUrl})`);
    }

    // Initialize zoom preview on mouse movement over the main image
    $('.zoom-container').on('mousemove', function(e) {
        const offset = $(this).offset();
        const relX = e.pageX - offset.left;
        const relY = e.pageY - offset.top;

        $('.zoom-preview')
            .css({
                left: `${relX}px`,
                top: `${relY}px`,
                backgroundPosition: `-${relX}px -${relY}px`
            });
    });

    $('.zoom-container').on('mouseleave', function() {
        $('.zoom-preview').css({ display: 'none' });
    });






    const mainImage = document.querySelector('.product-image-slider img');

mainImage.addEventListener('mousemove', function (e) {
    const { left, top, width, height } = mainImage.getBoundingClientRect();
    const mouseX = e.clientX - left;
    const mouseY = e.clientY - top;

    // Calculate the zoom percentage based on mouse position
    const zoomX = (mouseX / width) * 100;
    const zoomY = (mouseY / height) * 100;

    // Apply the zoom effect by adjusting the transform origin
    mainImage.style.transformOrigin = `${zoomX}% ${zoomY}%`;
    mainImage.style.transform = 'scale(1.2)';
});

mainImage.addEventListener('mouseleave', function () {
    mainImage.style.transform = 'scale(1)';
});





function addToCart(productId) {
  $.ajax({
    url: "/addToCart",
    method: "POST",
    data: { productId: productId },
    success: (response) => {
      if (response.status === true) {
        Swal.fire({
          title: "Added to Cart",
          text: "The product has been added to your cart.",
          icon: "success",
          timer: 2000,
          showConfirmButton: false,
        }).then(() => {
          // You can either update the cart count here or redirect to the cart page
          window.location.href = "/shop";
        });
      } else {
        let message = "Unable to add the product to your cart.";
        if (response.status === "Out of stock") {
          message = "The product is out of stock.";
        } else if (response.status === "Product not found") {
          message = "Product not found.";
        }
        
        Swal.fire({
          title: "Error",
          text: message,
          icon: "error",
          timer: 2000,
          showConfirmButton: false,
        });
      }
    },
    error: (error) => {
      Swal.fire({
        title: "Error",
        text: "There was an error processing your request.",
        icon: "error",
        timer: 2000,
        showConfirmButton: false,
      });
    },
  });
}





