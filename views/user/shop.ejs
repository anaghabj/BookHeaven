<div class="main-container">
  <section class="shop-page container">
    <div class="shop-topbar d-flex justify-content-between align-items-center mb-3">
      <div class="search-bar">
        <form action="/search" method="POST" class="search-form">
          <input type="text" name="query" placeholder="Search items..." class="search-input" />
          <button type="submit" class="search-button">Search</button>
        </form>
      </div>
    </div>

    <div class="row">
      <!-- Sidebar -->
      <aside class="col-lg-3">
        <div class="filter-section mb-4">
          <div class="filter-title">Categories</div>
          <ul class="list-group">
            <%for(let i=0;i<category.length;i++){%>
            <li class="list-group-item">
              <a href="/filter?category=<%=category[i]._id%>"><%=category[i].name%></a>
            </li>
            <%}%>
          </ul>
        </div>

        <div class="price-filter">
          <div class="filter-title">Filter by Price</div>
          <div class="price-options">
            <a href="/filterPrice?gt=0&lt=500" class="price-button">Under ₹500</a>
            <a href="/filterPrice?gt=500&lt=1000" class="price-button">₹500 - ₹1000</a>
            <a href="/filterPrice?gt=1000&lt=1500" class="price-button">₹1000- ₹1500</a>
            <a href="/filterPrice?gt=1500&lt=100000" class="price-button">Above ₹1500</a>
          </div>
        </div>
      </aside>



   <main class="col-lg-9">
    <div class="row g-4">
      <% for (let i = 0; i < products.length; i++) { %>
        <% if (i > 0 && i % 3 === 0) { %>
          </div><div class="row g-4">
        <% } %>
        <div class="col-md-4">
          <div class="product-card">
            <span class="wishlist-btn" onclick="addToWishlist('<%=products[i]._id%>')"> &#10084;</span>
            <a href="/productDetails?id=<%= products[i]._id %>">
              <img
                src="/uploads/re-image/<%= products[i].productImage[0] %>"
                alt="<%= products[i].productName %>"
              />
              <h4><%= products[i].productName %></h4>
              <p><%= products[i].category.name %></p>
              <p>
                Price: <%= products[i].salePrice.toLocaleString('en-IN') %>
                <span class="text-muted"
                  ><strike
                    ><%= products[i].regularPrice.toLocaleString('en-IN') %></strike
                  ></span
                >
              </p>
            </a> 
            <button class="add-to-cart-btn" onclick="addToCart('<%= products[i]._id %>')">Add to Cart</button>

          </div>
        </div>
      <% } %>
    </div>
  </main>
  
  

    <!-- Pagination -->
    <div class="pagination">
        <% if (currentPage > 1) { %>
          <a class="btn" href="/shop?page=<%= currentPage - 1 %>">Prev</a>
        <% } %>
   
   
        <% for (let i = 1; i <= totalPages; i++) { %>
          <a class="btn <%= currentPage === i ? 'active' : '' %>" href="/shop?page=<%= i %>"><%= i %></a>
        <% } %>
   
   
        <% if (currentPage < totalPages) { %>
          <a class="btn" href="/shop?page=<%= currentPage + 1 %>">Next</a>
        <% } %>
      </div>
   

