<%- include("../../views/partials/user/header") %>


<style>
    /* Wishlist Section */
section.mt-50.mb-50 {
    margin-top: 50px;
    margin-bottom: 50px;
    font-family: Arial, sans-serif;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.table-responsive {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}

.table {
    margin-bottom: 0;
    width: 100%;
    text-align: center;
    border-collapse: collapse;
    background: #fff;
}

.table thead {
    background-color: #f8f9fa;
}

.table th {
    padding: 15px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 14px;
    border-bottom: 2px solid #ddd;
}

.table td {
    padding: 15px;
    vertical-align: middle;
    font-size: 14px;
    border-bottom: 1px solid #ddd;
}

/* Image Styling */
.image.product-thumbnail img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 5px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
}

.image.product-thumbnail img:hover {
    transform: scale(1.05);
}

/* Product Name Styling */
.product-des.product-name h5 {
    margin: 0;
    font-size: 16px;
    font-weight: bold;
    color: #333;
}

.product-des.product-name p {
    margin: 5px 0 0;
    font-size: 13px;
    color: #777;
}

/* Price Styling */
.price span {
    font-size: 16px;
    font-weight: bold;
    color: #28a745;
}

/* Buttons Styling */
.btn {
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 14px;
    text-transform: uppercase;
    cursor: pointer;
    text-decoration: none;
    color: #fff;
}

.btn-sm {
    padding: 6px 12px;
    font-size: 12px;
}

.btn:hover {
    opacity: 0.8;
}

.btn.add-to-cart-btn {
    background-color: #007bff;
    border: none;
}

.btn.add-to-cart-btn:hover {
    background-color: #0056b3;
}

.btn i {
    font-size: 16px;
    color: #ff6b6b;
}

.btn i:hover {
    color: #e63946;
}

/* Empty Wishlist */
.lead {
    font-size: 18px;
    color: #555;
}

.text-center {
    text-align: center;
}

</style>
<main class="main">


   <div class="page-header breadcrumb-wrap">
       <div class="container">
           <div class="breadcrumb">
               <a href="/" rel="nofollow">Home</a>
               <span></span> Shop
               <span></span> My Wishlist
           </div>
       </div>
   </div>


   <section class="mt-50 mb-50">
       <div class="container">
           <div class="row">
               <div class="col-12">
                   <div class="table-responsive">
                       <table class="table shopping-summery text-center clean">
                           <thead>
                               <tr class="main-heading">
                                   <th scope="col">Image</th>
                                   <th scope="col">Name</th>
                                   <th scope="col">Price</th>
                                   <th scope="col">Add to Cart</th>
                                   <th scope="col">Remove</th>
                               </tr>
                           </thead>
                           <tbody>
                            <%if(wishlist.length>0){%>
                                <%for(let product of wishlist){%>
                             
                                       <tr>
                                           <td class="image product-thumbnail">
                                               <img src="/uploads/re-image/<%=product.productImage[0]%>" />
                                           </td>
                                           <td class="product-des product-name">
                                               <h5 class="product-name">
                                                   <a href="<%=product.productName%>">
                                                    <%=product.productName%>
                                                      
                                                   </a>
                                               </h5>
                                               <p class="font-xs">
                                                <%=product.category.name%>
                                                   <br />
                                                  
                                               </p>
                                           </td>
                                           <td class="price" data-title="Price">â‚¹<span>
                                            <%=product.salePrice%>
                                          
                                           </span></td>
                                           <td class="text-center" data-title="Add to Cart">
                                               <a href="#" onclick="" class="btn btn-sm">Add to Cart</a>
                                           </td>
                                           <td class="action" data-title="Remove">
                                               <a class="btn btn-sm" href="#" onclick="confirmRemove('<%=product._id%>')">
                                                   <i class="fi-rs-trash"></i>
                                               </a>
                                           </td>
                                       </tr>
                                   <%}%>    <%}else{%>
                                   <tr>
                                       <td colspan="5" class="text-center">
                                           <p class="lead mb-4">No items found in Wishlist</p>
                                       </td>
                                   </tr>
                                   <%}%>
                           </tbody>
                       </table>
                   </div>
               </div>
           </div>
       </div>
   </section>
</main>
<%- include("../../views/partials/user/footer") %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function confirmRemove(productId){
        Swal.fire({
            title:"Are you Sure?",
            text:"you wont be able to revert this",
            icon:'Warning',
            showCancelButton:true,
            confirmButtonColor:'#3085d6',
            cancelButtonColor:'#d33',
            confirmButtonText:'Yes, Remove it '


        }).then((result)=>{
            if(result.isConfirmed){
                window.location.href='/removeFromWishlist?productId=${productId}'
            }
        })
    }
</script>