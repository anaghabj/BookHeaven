<%-include("../../views/partials/user/header")%>

<style>
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  
  body {
    font-family: Arial, Helvetica, sans-serif;
    line-height: 1.6;
    background-color: #f8f9fa;
    color: #333;
  }

  
  .section-title {
    text-align: center;
    margin: 20px 0;
    font-size: 2.4rem;
    color: #555;
  }

  
  .product.spad {
    padding: 30px 0;
  }

  .product__filter {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  
  .product-cart-wrap {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease;
    background: #fff;
    flex: 0 0 calc(33.333% - 20px); 
    max-width: calc(33.333% - 20px);
  }

  .product-cart-wrap:hover {
    transform: translateY(-5px);
  }

  
  .product-img {
    position: relative;
    overflow: hidden;
  }

  

    .product-img img {
  width: 80%;
  height: auto; 
  object-fit: contain; 
  margin-left:10px;
  margin-right:10px;
  margin-top: 10px;
}
  

  .product-img-zoom:hover img {
    transform: scale(1.1);
  }

 
  .product-action-1 {
    position: relative;
    top: 0px;
    right: 0px;
  }

  .action-btn {
    background: rgba(255, 255, 255, 0.8);
    border: none;
    cursor: pointer;
    padding: 8px 10px;
    border-radius: 50%;
    transition: background 0.3s ease;
  }

  .action-btn:hover {
    background: #ff4757;
    color: #fff;
  }

  
  .product-content-wrap {
    padding: 15px;
    text-align: center;
  }

  .product-content-wrap h6 {
    font-size: 1.1rem;
    margin-bottom: 5px;
    color: #555;
  }

  .product-content-wrap h5 {
    color: #007bff;
    font-size: 1.3rem;
    margin-bottom: 10px;
  }

  .product-content-wrap a {
    display: inline-block;
    padding: 8px 12px;
    background-color: #007bff;
    color: #fff;
    border-radius: 4px;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .product-content-wrap a:hover {
    background: #0056b3;
  }

  @media (max-width: 1200px) {
    .product-cart-wrap {
      flex: 0 0 calc(50% - 20px);
      max-width: calc(50% - 20px);
    }
  }

  @media (max-width: 992px) {
    .product-cart-wrap {
      flex: 0 0 calc(50% - 20px);
      max-width: calc(50% - 20px);
    }
  }

  @media (max-width: 768px) {
    .product-cart-wrap {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }

 
  footer {
    text-align: center;
    padding: 20px 0;
    margin-top: 40px;
    background: #fff;
    color: #333;
    font-size: 0.9rem;
    border-top: 1px solid #ddd;
  }

  
  .action-btn.wishlist-btn {
    background:#fff; 
    color:#ff4757; 
  }

  .action-btn.wishlist-btn:hover {
    background:#fff;
    color:#ff4757;
  }






  .search-bar {
  text-align: center;
  margin: 20px 0;
}

.search-bar input {
  padding: 8px;
  font-size: 1rem;
  width: 300px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.search-bar button {
  padding: 4px 6px;
  margin-left: 10px;
  font-size: 0.9rem;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 10px;
}

.search-bar button:hover {
  background-color: #0056b3;
}







</style>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<section class="product spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="section-title">All Books</h2>
      </div>
    </div>







<!-- Search Form -->
<div class="search-bar">
  <form action="/product-list" method="GET">
    <input type="text" name="search" placeholder="Search for books..." value="<%= searchQuery %>">
    <button type="submit">Search</button>
  </form>
</div>





    <div class="row product__filter">
      <% for (let i = 0; i < products.length; i++) { %>
        <div class="product-cart-wrap">
          <div class="product-img-action-wrap">
            <div class="product-img product-img-zoom">
              <a href="/productDetails?id=<%= products[i]._id %>">
                <img class="default-img" src="/uploads/re-image/<%= products[i].productImage[0] %>" 
                     alt="<%= products[i].productName %>">
              </a>
            </div>
            <div class="product-action-1">
              <a aria-label="Add to wishlist" class="action-btn wishlist-btn" 
                 href="/addtoWishlist?id=<%= products[i]._id %>">
                <i class="fas fa-heart"></i>
              </a>
            </div>
          </div>

          
          <div class="product-content-wrap">
            <h6><%= products[i].productName %></h6>
            <h5>$<%= products[i].salePrice %></h5>
            <a href="/addToCart?id=<%= products[i]._id %>">Add to Cart</a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>



<%-include("../../views/partials/user/footer")%>
